{
  "name": "vercel",
  "description": "Vercel CLI â€” deploy and manage Vercel projects",
  "version": "1.0.0",

  "cli": {
    "type": "prebuilt",
    "binary": "vercel",
    "install": {
      "method": "npm",
      "command": "npm i -g vercel"
    }
  },

  "auth": {
    "required": true,
    "method": "token",
    "env_vars": ["VERCEL_TOKEN"],
    "notes": "Run `vercel login` or set VERCEL_TOKEN env var"
  },

  "depends_on": ["git"],

  "commands": {
    "deploy": {
      "description": "Deploy current project",
      "usage": "vercel --prod"
    },
    "deploy_preview": {
      "description": "Deploy preview",
      "usage": "vercel"
    },
    "list": {
      "description": "List deployments",
      "usage": "vercel ls"
    },
    "logs": {
      "description": "View deployment logs",
      "usage": "vercel logs <url>"
    },
    "env_pull": {
      "description": "Pull env vars from Vercel",
      "usage": "vercel env pull"
    }
  },

  "status": "not_installed"
}
