{
  "name": "github",
  "description": "GitHub CLI â€” manage repos, PRs, issues, gists, Actions",
  "version": "1.0.0",

  "cli": {
    "type": "prebuilt",
    "binary": "gh",
    "install": {
      "method": "apt",
      "command": "sudo apt install gh"
    }
  },

  "auth": {
    "required": true,
    "method": "oauth",
    "env_vars": ["GITHUB_TOKEN"],
    "notes": "Run `gh auth login` or set GITHUB_TOKEN env var"
  },

  "depends_on": ["git"],

  "commands": {
    "repo_clone": {
      "description": "Clone a repository",
      "usage": "gh repo clone <owner>/<repo>"
    },
    "pr_list": {
      "description": "List open PRs",
      "usage": "gh pr list"
    },
    "pr_create": {
      "description": "Create a pull request",
      "usage": "gh pr create --title <title> --body <body>"
    },
    "issue_create": {
      "description": "Create an issue",
      "usage": "gh issue create --title <title> --body <body>"
    },
    "workflow_run": {
      "description": "Trigger a GitHub Actions workflow",
      "usage": "gh workflow run <workflow>"
    },
    "release_create": {
      "description": "Create a release",
      "usage": "gh release create <tag> --notes <notes>"
    }
  },

  "status": "installed"
}
